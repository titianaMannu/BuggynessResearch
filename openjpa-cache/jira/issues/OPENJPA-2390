 FROM INFORMATION_SCHEMA.SYSTEM_SEQUENCES LIMIT {1}\"\n\nI will attatch an unit test that uses in memory hsqldb to show the problem soon.","customfield_10010":null,"timetracking":{},"customfield_12314523":null,"customfield_12314127":null,"customfield_12314522":null,"customfield_12314126":null,"customfield_12314521":null,"customfield_12314125":null,"customfield_12314520":null,"customfield_12314124":null,"attachment":[{"self":"https://issues.apache.org/jira/rest/api/2/attachment/12585191","id":"12585191","filename":"HSQLSequenceTest.java","author":{"self":"https://issues.apache.org/jira/rest/api/2/user?username=rene.link","name":"rene.link","key":"rene.link","avatarUrls":{"48x48":"https://issues.apache.org/jira/secure/useravatar?avatarId=10452","24x24":"https://issues.apache.org/jira/secure/useravatar?size=small&avatarId=10452","16x16":"https://issues.apache.org/jira/secure/useravatar?size=xsmall&avatarId=10452","32x32":"https://issues.apache.org/jira/secure/useravatar?size=medium&avatarId=10452"},"displayName":"René Link","active":true,"timeZone":"Etc/UTC"},"created":"2013-05-29T12:41:11.429+0000","size":1912,"mimeType":"text/plain","content":"https://issues.apache.org/jira/secure/attachment/12585191/HSQLSequenceTest.java"},{"self":"https://issues.apache.org/jira/rest/api/2/attachment/12588671","id":"12588671","filename":"OPENJPA-2390.patch","author":{"self":"https://issues.apache.org/jira/rest/api/2/user?username=dlau","name":"dlau","key":"dlau","avatarUrls":{"48x48":"https://issues.apache.org/jira/secure/useravatar?avatarId=10452","24x24":"https://issues.apache.org/jira/secure/useravatar?size=small&avatarId=10452","16x16":"https://issues.apache.org/jira/secure/useravatar?size=xsmall&avatarId=10452","32x32":"https://issues.apache.org/jira/secure/useravatar?size=medium&avatarId=10452"},"displayName":"Di Wu Lau","active":true,"timeZone":"America/Chicago"},"created":"2013-06-19T19:52:03.382+0000","size":12172,"mimeType":"text/plain","content":"https://issues.apache.org